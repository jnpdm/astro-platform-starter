---
/**
 * Gate View Page
 * Displays all partners currently in a specific gate phase
 * Allows users to see partners grouped by their current gate
 */

export const prerender = false;

import Layout from '../../../layouts/Layout.astro';
import { listPartners } from '../../../utils/storage';
import { getUserSession } from '../../../middleware/auth';
import { GATE_LABELS } from '../../../utils/gateLabels';
import type { PartnerRecord, GateId } from '../../../types/partner';

const { gateId } = Astro.params;

// Validate gate ID
const validGateIds: GateId[] = ['pre-contract', 'gate-0', 'gate-1', 'gate-2', 'gate-3', 'post-launch'];
if (!gateId || !validGateIds.includes(gateId as GateId)) {
    return Astro.redirect('/?error=invalid-gate');
}

const typedGateId = gateId as GateId;

// Get current user from cookies (server-side)
const cookieHeader = Astro.request.headers.get('cookie');
const currentUser = getUserSession(cookieHeader || undefined);

// Fetch all partners
let allPartners: PartnerRecord[] = [];
let error: string | null = null;

try {
    allPartners = await listPartners();
} catch (e) {
    console.error('Failed to load partners:', e);
    error = 'Failed to load partners. Please try again later.';
}

// Filter partners by current gate
const partnersInGate = allPartners.filter((partner) => partner.currentGate === typedGateId);

// Get gate label
const gateLabel = GATE_LABELS[typedGateId];

// Helper function to format date
function formatDate(date: Date | string | undefined): string {
    if (!date) return 'Not set';
    const d = typeof date === 'string' ? new Date(date) : date;
    return d.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
}

// Helper function to format currency
function formatCurrency(amount: number): string {
    return new Intl.NumberFormat('en-US', {
        style: 'currency',
        currency: 'USD',
        minimumFractionDigits: 0,
        maximumFractionDigits: 0
    }).format(amount);
}

// Helper function to get status badge color
function getStatusColor(status: string): string {
    switch (status) {
        case 'passed':
            return 'bg-green-600 text-white';
        case 'in-progress':
            return 'bg-yellow-600 text-white';
        case 'failed':
            return 'bg-red-600 text-white';
        case 'blocked':
            return 'bg-orange-600 text-white';
        default:
            return 'bg-gray-600 text-white';
    }
}
---

<Layout title={`${gateLabel} - Partners`}>
    <div class="py-8">
        <!-- Header with Back Button -->
        <div class="mb-6">
            <a href="/" class="text-blue-400 hover:text-blue-300 text-sm mb-4 inline-block"> ← Back to Dashboard </a>
            <h1 class="text-4xl font-bold mb-2">{gateLabel}</h1>
            <p class="text-gray-400">
                {partnersInGate.length}
                {partnersInGate.length === 1 ? 'partner' : 'partners'} currently in this gate
            </p>
        </div>

        {
            error ? (
                <div class="bg-red-900/50 border border-red-600 text-red-200 px-4 py-3 rounded mb-6">{error}</div>
            ) : partnersInGate.length === 0 ? (
                <div class="bg-gray-800/50 border border-gray-700 rounded-lg p-12 text-center">
                    <div class="text-gray-400 text-lg mb-4">No partners currently in {gateLabel}</div>
                    <a href="/" class="text-blue-400 hover:text-blue-300">
                        View all partners
                    </a>
                </div>
            ) : (
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {partnersInGate.map((partner) => {
                        const gateProgress = partner.gates?.[typedGateId];
                        const status = gateProgress?.status || 'not-started';

                        return (
                            <a
                                href={`/partner/${partner.id}`}
                                class="block bg-gray-800/50 border border-gray-700 rounded-lg p-6 hover:border-blue-500 transition-colors"
                            >
                                {/* Partner Name and Tier */}
                                <div class="mb-4">
                                    <h2 class="text-xl font-bold mb-2">{partner.partnerName}</h2>
                                    <div class="flex items-center gap-2">
                                        <span class="px-2 py-1 bg-gray-700 rounded text-xs font-medium uppercase">{partner.tier}</span>
                                        <span class={`px-2 py-1 rounded text-xs font-medium ${getStatusColor(status)}`}>
                                            {status.replace('-', ' ').toUpperCase()}
                                        </span>
                                    </div>
                                </div>

                                {/* Key Information */}
                                <div class="space-y-2 text-sm">
                                    <div class="flex justify-between">
                                        <span class="text-gray-400">PAM Owner:</span>
                                        <span class="font-medium">{partner.pamOwner}</span>
                                    </div>
                                    {partner.pdmOwner && (
                                        <div class="flex justify-between">
                                            <span class="text-gray-400">PDM Owner:</span>
                                            <span class="font-medium">{partner.pdmOwner}</span>
                                        </div>
                                    )}
                                    <div class="flex justify-between">
                                        <span class="text-gray-400">CCV:</span>
                                        <span class="font-medium">{formatCurrency(partner.ccv)}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-400">Target Launch:</span>
                                        <span class="font-medium">{formatDate(partner.targetLaunchDate)}</span>
                                    </div>
                                </div>

                                {/* Gate Progress */}
                                {gateProgress && (
                                    <div class="mt-4 pt-4 border-t border-gray-700">
                                        {gateProgress.startedDate && <div class="text-xs text-gray-400">Started: {formatDate(gateProgress.startedDate)}</div>}
                                        {gateProgress.blockers && gateProgress.blockers.length > 0 && (
                                            <div class="mt-2 text-xs text-orange-400">
                                                ⚠️ {gateProgress.blockers.length} {gateProgress.blockers.length === 1 ? 'blocker' : 'blockers'}
                                            </div>
                                        )}
                                    </div>
                                )}
                            </a>
                        );
                    })}
                </div>
            )
        }
    </div>
</Layout>
