---
/**
 * Pre-Contract PDM Engagement Questionnaire Page
 *
 * This page implements the Pre-Contract PDM Engagement questionnaire which validates
 * qualification criteria for PDM support before contract signature.
 *
 * Features:
 * - Five sections: Executive Sponsorship, Commercial Framework, Technical Feasibility, Timeline, Strategic Classification
 * - Section status calculation based on responses
 * - Signature capture before submission
 * - CCV threshold validation (10% of Country LRP)
 *
 * Requirements: 4.1, 4.2, 4.3, 4.4, 4.5, 4.6, 4.7
 */

export const prerender = false;

import PreContractQuestionnaire from '../../components/questionnaires/PreContractQuestionnaire';
import { ToastProvider } from '../../contexts/ToastContext';

// Load the pre-contract PDM questionnaire config
import preContractConfigData from '../../config/questionnaires/pre-contract-pdm.json';
const preContractConfig = preContractConfigData as any;

// Debug: Log config to verify it's loaded
console.log('Pre-contract config loaded:', preContractConfig?.id);

// Get partner ID from URL query params (if editing existing submission)
const url = new URL(Astro.request.url);
const partnerId = url.searchParams.get('partnerId') || 'new';
const submissionId = url.searchParams.get('submissionId');

// Load existing submission if editing
let existingSubmission = null;
if (submissionId) {
    try {
        const response = await fetch(`${url.origin}/api/submission/${submissionId}`);
        if (response.ok) {
            const result = await response.json();
            existingSubmission = result.data;
        }
    } catch (error) {
        console.error('Failed to load existing submission:', error);
    }
}

import HubLayout from '../../layouts/HubLayout.astro';

const pageTitle = existingSubmission ? 'View Pre-Contract PDM Engagement Submission' : 'Pre-Contract PDM Engagement Questionnaire';
const mode = existingSubmission ? 'view' : 'edit';
---

<HubLayout title={pageTitle} description="Pre-Contract PDM Engagement Questionnaire">
    <div class="py-8">
        <!-- Page Header -->
        <div class="mb-6">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <h1 class="text-4xl font-bold mb-2">Pre-Contract PDM Engagement</h1>
                    <p class="text-gray-300">Validate partner readiness before contract execution</p>
                </div>
                <a href="/" class="px-4 py-2 text-sm font-medium bg-gray-700 hover:bg-gray-600 rounded transition-colors"> ‚Üê Back to Dashboard </a>
            </div>
        </div>

        <!-- Questionnaire Component -->
        <ToastProvider client:load>
            <PreContractQuestionnaire client:load config={preContractConfig} existingData={existingSubmission} partnerId={partnerId} mode={mode} />
        </ToastProvider>
    </div>
</HubLayout>
