---
/**
 * Gate 2: Ready to Order Questionnaire Page
 *
 * This page implements the Gate 2: Ready to Order questionnaire which validates
 * systems integration and operational process setup.
 *
 * Features:
 * - Two phase sections: Phase 2A (Systems Integration), Phase 2B (Operational Process Setup)
 * - Validates gate criteria: API integration complete, monitoring active, test transactions successful
 * - Both phases must pass for Gate 2 completion
 * - Section status calculation based on responses
 * - Signature capture before submission
 *
 * Requirements: 6.1, 6.2, 6.3, 6.4, 6.6
 */

export const prerender = false;

import Gate2Questionnaire from '../../components/questionnaires/Gate2Questionnaire';

// Load the Gate 2 questionnaire config
import gate2ConfigData from '../../config/questionnaires/gate-2-ready-to-order.json';
const gate2Config = gate2ConfigData;

// Get partner ID from URL query params (if editing existing submission)
const url = new URL(Astro.request.url);
const partnerId = url.searchParams.get('partnerId') || 'new';
const submissionId = url.searchParams.get('submissionId');

// Load existing submission if editing
let existingSubmission = null;
if (submissionId) {
    try {
        const response = await fetch(`${url.origin}/api/submission/${submissionId}`);
        if (response.ok) {
            const result = await response.json();
            existingSubmission = result.data;
        }
    } catch (error) {
        console.error('Failed to load existing submission:', error);
    }
}

import HubLayout from '../../layouts/HubLayout.astro';

const pageTitle = existingSubmission ? 'View Gate 2: Ready to Order Submission' : 'Gate 2: Ready to Order Questionnaire';
const mode = existingSubmission ? 'view' : 'edit';
---

<HubLayout title={pageTitle} description="Gate 2: Ready to Order Questionnaire">
    <div class="py-8">
        <!-- Page Header -->
        <div class="mb-6">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <h1 class="text-4xl font-bold mb-2">Gate 2: Ready to Order</h1>
                    <p class="text-gray-300">Validate technical readiness and order processing capability</p>
                </div>
                <a href="/" class="px-4 py-2 text-sm font-medium bg-gray-700 hover:bg-gray-600 rounded transition-colors"> ‚Üê Back to Dashboard </a>
            </div>
        </div>

        <!-- Questionnaire Component -->
        <Gate2Questionnaire client:load config={gate2Config} existingData={existingSubmission} partnerId={partnerId} mode={mode} />
    </div>
</HubLayout>
