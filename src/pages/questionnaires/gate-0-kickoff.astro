---
/**
 * Gate 0: Onboarding Kickoff Questionnaire Page
 *
 * This page implements the Gate 0: Onboarding Kickoff questionnaire which validates
 * readiness for white-glove onboarding support.
 *
 * Features:
 * - Six sections: Contract Execution, Partner Team, Launch Timing, Financial Bar, Strategic Value, Operational Readiness
 * - Automatic qualification logic for Tier 0 partners (CCV ≥$50M)
 * - Block progression if fewer than 4 criteria met
 * - Section status calculation based on responses
 * - Signature capture before submission
 *
 * Requirements: 6.1, 6.2, 6.3, 6.4, 6.5
 */

export const prerender = false;

import Gate0Questionnaire from '../../components/questionnaires/Gate0Questionnaire';
import { ToastProvider } from '../../contexts/ToastContext';

// Load the Gate 0 questionnaire config
import gate0ConfigData from '../../config/questionnaires/gate-0-kickoff.json';
const gate0Config = gate0ConfigData as any;

// Get partner ID from URL query params (if editing existing submission)
const url = new URL(Astro.request.url);
const partnerId = url.searchParams.get('partnerId') || 'new';
const submissionId = url.searchParams.get('submissionId');

// Load existing submission if editing
let existingSubmission = null;
if (submissionId) {
    try {
        const response = await fetch(`${url.origin}/api/submission/${submissionId}`);
        if (response.ok) {
            const result = await response.json();
            existingSubmission = result.data;
        }
    } catch (error) {
        console.error('Failed to load existing submission:', error);
    }
}

import HubLayout from '../../layouts/HubLayout.astro';

const pageTitle = existingSubmission ? 'View Gate 0: Onboarding Kickoff Submission' : 'Gate 0: Onboarding Kickoff Questionnaire';
const mode = existingSubmission ? 'view' : 'edit';
---

<HubLayout title={pageTitle} description="Gate 0: Onboarding Kickoff Questionnaire">
    <div class="py-8">
        <!-- Page Header -->
        <div class="mb-6">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <h1 class="text-4xl font-bold mb-2">Gate 0: Onboarding Kickoff</h1>
                    <p class="text-gray-300">Validate readiness for white-glove onboarding support</p>
                </div>
                <a href="/" class="px-4 py-2 text-sm font-medium bg-gray-700 hover:bg-gray-600 rounded transition-colors"> ← Back to Dashboard </a>
            </div>
        </div>

        <!-- Questionnaire Component -->
        <ToastProvider client:load>
            <Gate0Questionnaire client:load config={gate0Config} existingData={existingSubmission} partnerId={partnerId} mode={mode} />
        </ToastProvider>
    </div>
</HubLayout>
