---
/**
 * Gate 0: Onboarding Kickoff Questionnaire Page
 *
 * This page implements the Gate 0: Onboarding Kickoff questionnaire which validates
 * readiness for white-glove onboarding support.
 *
 * Features:
 * - Six sections: Contract Execution, Partner Team, Launch Timing, Financial Bar, Strategic Value, Operational Readiness
 * - Automatic qualification logic for Tier 0 partners (CCV ≥$50M)
 * - Block progression if fewer than 4 criteria met
 * - Section status calculation based on responses
 * - Signature capture before submission
 *
 * Requirements: 6.1, 6.2, 6.3, 6.4, 6.5
 */

export const prerender = false;

import Gate0Questionnaire from '../../components/questionnaires/Gate0Questionnaire';
import type { QuestionnaireConfig } from '../../types/questionnaire';

// Load the Gate 0 questionnaire config
const gate0Config: QuestionnaireConfig = await import('../../config/questionnaires/gate-0-kickoff.json').then((m) => m.default);

// Get partner ID from URL query params (if editing existing submission)
const url = new URL(Astro.request.url);
const partnerId = url.searchParams.get('partnerId') || 'new';
const submissionId = url.searchParams.get('submissionId');

// Load existing submission if editing
let existingSubmission = null;
if (submissionId) {
    try {
        const response = await fetch(`${url.origin}/api/submission/${submissionId}`);
        if (response.ok) {
            const result = await response.json();
            existingSubmission = result.data;
        }
    } catch (error) {
        console.error('Failed to load existing submission:', error);
    }
}

const pageTitle = existingSubmission ? 'View Gate 0: Onboarding Kickoff Submission' : 'Gate 0: Onboarding Kickoff Questionnaire';
const mode = existingSubmission ? 'view' : 'edit';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{pageTitle} - Kuiper Partner Onboarding Hub</title>
        <style>
            body {
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            }
        </style>
    </head>
    <body class="bg-gray-50 min-h-screen">
        <!-- Header -->
        <header class="bg-white border-b border-gray-200 shadow-sm">
            <div class="container mx-auto px-4 py-4">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Kuiper Partner Onboarding Hub</h1>
                        <p class="text-sm text-gray-600">Gate 0: Onboarding Kickoff</p>
                    </div>
                    <a
                        href="/"
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
                    >
                        ← Back to Dashboard
                    </a>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="container mx-auto px-4 py-8">
            <!-- Page Header -->
            <div class="mb-8">
                <div class="flex items-center mb-2">
                    <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                    <h2 class="text-3xl font-bold text-gray-900">{pageTitle}</h2>
                </div>
                <p class="text-gray-600 mb-4">
                    {gate0Config.metadata.description}
                </p>

                <!-- Questionnaire Info -->
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <p class="text-sm font-medium text-blue-900">Estimated Time</p>
                            <p class="text-lg text-blue-700">{gate0Config.metadata.estimatedTime} minutes</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-blue-900">Sections</p>
                            <p class="text-lg text-blue-700">{gate0Config.sections.length}</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-blue-900">Required Roles</p>
                            <p class="text-lg text-blue-700">{gate0Config.metadata.requiredRoles.join(', ')}</p>
                        </div>
                    </div>
                </div>

                <!-- Gate Criteria -->
                <div class="mt-4 bg-white border border-gray-200 rounded-lg p-4">
                    <h3 class="text-sm font-medium text-gray-900 mb-2">Gate Criteria</h3>
                    <ul class="space-y-1">
                        {
                            gate0Config.gateCriteria.map((criterion) => (
                                <li class="flex items-start text-sm text-gray-700">
                                    <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    {criterion}
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Qualification Rules -->
                <div class="mt-4 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                    <h3 class="text-sm font-medium text-yellow-900 mb-2">Qualification Rules</h3>
                    <ul class="space-y-2 text-sm text-yellow-800">
                        <li class="flex items-start">
                            <svg class="w-4 h-4 text-yellow-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span><strong>Tier 0 Partners (CCV ≥ $50M):</strong> Automatically qualify for white-glove onboarding</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="w-4 h-4 text-yellow-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span><strong>Other Partners:</strong> Must meet at least 4 of 6 criteria to qualify</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Questionnaire Component -->
            <Gate0Questionnaire client:load config={gate0Config} existingData={existingSubmission} partnerId={partnerId} mode={mode} />
        </main>

        <!-- Footer -->
        <footer class="bg-white border-t border-gray-200 mt-12">
            <div class="container mx-auto px-4 py-6">
                <p class="text-sm text-gray-600 text-center">© 2025 Kuiper Partner Onboarding Hub. All rights reserved.</p>
            </div>
        </footer>
    </body>
</html>
