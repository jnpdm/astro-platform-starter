---
/**
 * Gate 0: Onboarding Kickoff Questionnaire Page
 *
 * This page implements the Gate 0: Onboarding Kickoff questionnaire which validates
 * readiness for white-glove onboarding support.
 *
 * Features:
 * - Six sections: Contract Execution, Partner Team, Launch Timing, Financial Bar, Strategic Value, Operational Readiness
 * - Automatic qualification logic for Tier 0 partners (CCV ≥$50M)
 * - Block progression if fewer than 4 criteria met
 * - Section status calculation based on responses
 * - Signature capture before submission
 *
 * Requirements: 6.1, 6.2, 6.3, 6.4, 6.5
 */

export const prerender = false;

import Gate0QuestionnaireWithToast from '../../components/questionnaires/Gate0QuestionnaireWithToast';

// Load the Gate 0 questionnaire config
import gate0ConfigData from '../../config/questionnaires/gate-0-kickoff.json';
const gate0Config = gate0ConfigData as any;

// Get partner ID and mode from URL query params
const url = new URL(Astro.request.url);
const partnerId = url.searchParams.get('partnerId') || 'new';
const submissionId = url.searchParams.get('submissionId');
const mode = url.searchParams.get('mode') || 'create';

// Load existing submission if editing or viewing
let existingSubmission = null;
if (submissionId) {
    try {
        const { getSubmission } = await import('../../utils/storage');
        existingSubmission = await getSubmission(submissionId);

        if (!existingSubmission) {
            console.error('Submission not found:', submissionId);
        }
    } catch (error) {
        console.error('Failed to load existing submission:', error);
    }
}

import HubLayout from '../../layouts/HubLayout.astro';

const pageTitle =
    mode === 'edit'
        ? 'Edit Gate 0: Onboarding Kickoff Questionnaire'
        : existingSubmission
          ? 'View Gate 0: Onboarding Kickoff Submission'
          : 'Gate 0: Onboarding Kickoff Questionnaire';
---

<HubLayout title={pageTitle} description="Gate 0: Onboarding Kickoff Questionnaire">
    <div class="py-8">
        <!-- Immediate inline script test -->
        <script is:inline>
            alert('GATE 0 SCRIPT IS RUNNING!');
            console.log('=== GATE 0 PAGE LOADED ===');
            console.log('Document ready state:', document.readyState);
            console.log('Location:', window.location.href);
        </script>

        <!-- Page Header -->
        <div class="mb-6">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <h1 class="text-4xl font-bold mb-2">
                        {mode === 'edit' && <span class="text-blue-400">Editing: </span>}
                        Gate 0: Onboarding Kickoff
                    </h1>
                    <p class="text-gray-300">Validate readiness for white-glove onboarding support</p>
                    {
                        mode === 'edit' && existingSubmission && (
                            <div class="mt-2 p-3 bg-blue-900/50 border border-blue-500 text-blue-200 text-sm rounded">
                                <strong>✏️ Edit Mode:</strong> You are editing an existing questionnaire submission. Changes will update the existing record.
                            </div>
                        )
                    }
                </div>
                <a
                    href={partnerId !== 'new' ? `/partner/${partnerId}` : '/'}
                    class="px-4 py-2 text-sm font-medium bg-gray-700 hover:bg-gray-600 rounded transition-colors"
                >
                    ← Back to {partnerId !== 'new' ? 'Partner' : 'Dashboard'}
                </a>
            </div>
        </div>

        <!-- Questionnaire Component -->
        <div id="questionnaire-container">
            <!-- Loading State -->
            <div id="loading-indicator" class="flex items-center justify-center py-12">
                <div class="text-center">
                    <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mb-4"></div>
                    <p class="text-gray-400">Loading questionnaire...</p>
                </div>
            </div>

            <!-- Error Boundary -->
            <div id="error-boundary" class="hidden">
                <div class="max-w-2xl mx-auto">
                    <div class="bg-red-50 border border-red-200 rounded-lg p-8">
                        <div class="flex items-start">
                            <svg class="w-6 h-6 text-red-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                            <div class="flex-1">
                                <h3 class="text-lg font-medium text-red-900 mb-2">Failed to Load Questionnaire</h3>
                                <p class="text-sm text-red-700 mb-4">
                                    We encountered an error while loading the questionnaire component. This may be due to a network issue or a problem with the
                                    page configuration.
                                </p>
                                <div class="flex gap-3">
                                    <button
                                        onclick="window.location.reload()"
                                        class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors"
                                    >
                                        Retry
                                    </button>
                                    <a href="/" class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition-colors"> Back to Dashboard </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Questionnaire Component with Toast context -->
            <div id="questionnaire-content">
                <Gate0QuestionnaireWithToast client:only="react" config={gate0Config} existingData={existingSubmission} partnerId={partnerId} mode={mode} />
            </div>
        </div>

        <script is:inline>
            // Debug: Log when script runs
            console.log('[Gate0] Script loaded - inline mode');

            // Function to initialize questionnaire
            function initQuestionnaire() {
                console.log('[Gate0] Initializing questionnaire');
                const loadingIndicator = document.getElementById('loading-indicator');
                const questionnaireContent = document.getElementById('questionnaire-content');

                console.log('[Gate0] Elements found:', {
                    loadingIndicator: !!loadingIndicator,
                    questionnaireContent: !!questionnaireContent,
                    hasChildren: questionnaireContent ? questionnaireContent.children.length : 0
                });

                // Hide loading indicator after a short delay to allow React to hydrate
                setTimeout(() => {
                    console.log('[Gate0] Hiding loading indicator');
                    if (loadingIndicator) {
                        loadingIndicator.style.display = 'none';
                    }
                }, 2000); // Increased to 2 seconds to give React time to hydrate
            }

            // Run immediately if DOM is ready, otherwise wait
            if (document.readyState === 'loading') {
                console.log('[Gate0] Waiting for DOMContentLoaded');
                document.addEventListener('DOMContentLoaded', initQuestionnaire);
            } else {
                console.log('[Gate0] DOM already ready, initializing now');
                initQuestionnaire();
            }

            // Listen for component errors
            window.addEventListener('error', (event) => {
                console.error('[Gate0] Error caught:', event.error, event);
                const errorBoundary = document.getElementById('error-boundary');
                const questionnaireContainer = document.getElementById('questionnaire-content');
                const loadingIndicator = document.getElementById('loading-indicator');

                if (errorBoundary && questionnaireContainer) {
                    errorBoundary.classList.remove('hidden');
                    questionnaireContainer.style.display = 'none';
                    if (loadingIndicator) {
                        loadingIndicator.style.display = 'none';
                    }
                }
            });
        </script>
    </div>
</HubLayout>
