---
/**
 * Gate 1: Ready to Sell Questionnaire Page
 *
 * This page implements the Gate 1: Ready to Sell questionnaire which validates
 * completion of onboarding kickoff, GTM strategy, and training.
 *
 * Features:
 * - Three phase sections: Phase 1A (Kickoff & Planning), Phase 1B (GTM & Discovery), Phase 1C (Training)
 * - Validates gate criteria: project plan approved, GTM strategy approved, technical architecture defined, sales team certified
 * - All three phases must pass for Gate 1 completion
 * - Section status calculation based on responses
 * - Signature capture before submission
 *
 * Requirements: 6.1, 6.2, 6.3, 6.4, 6.6
 */

export const prerender = false;

import Gate1Questionnaire from '../../components/questionnaires/Gate1Questionnaire';
import type { QuestionnaireConfig } from '../../types/questionnaire';

// Load the Gate 1 questionnaire config
const gate1Config: QuestionnaireConfig = await import('../../config/questionnaires/gate-1-ready-to-sell.json').then((m) => m.default);

// Get partner ID from URL query params (if editing existing submission)
const url = new URL(Astro.request.url);
const partnerId = url.searchParams.get('partnerId') || 'new';
const submissionId = url.searchParams.get('submissionId');

// Load existing submission if editing
let existingSubmission = null;
if (submissionId) {
    try {
        const response = await fetch(`${url.origin}/api/submission/${submissionId}`);
        if (response.ok) {
            const result = await response.json();
            existingSubmission = result.data;
        }
    } catch (error) {
        console.error('Failed to load existing submission:', error);
    }
}

const pageTitle = existingSubmission ? 'View Gate 1: Ready to Sell Submission' : 'Gate 1: Ready to Sell Questionnaire';
const mode = existingSubmission ? 'view' : 'edit';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{pageTitle} - Kuiper Partner Onboarding Hub</title>
        <style>
            body {
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            }
        </style>
    </head>
    <body class="bg-gray-50 min-h-screen">
        <!-- Header -->
        <header class="bg-white border-b border-gray-200 shadow-sm">
            <div class="container mx-auto px-4 py-4">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Kuiper Partner Onboarding Hub</h1>
                        <p class="text-sm text-gray-600">Gate 1: Ready to Sell</p>
                    </div>
                    <a
                        href="/"
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
                    >
                        ← Back to Dashboard
                    </a>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="container mx-auto px-4 py-8">
            <!-- Page Header -->
            <div class="mb-8">
                <div class="flex items-center mb-2">
                    <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        ></path>
                    </svg>
                    <h2 class="text-3xl font-bold text-gray-900">{pageTitle}</h2>
                </div>
                <p class="text-gray-600 mb-4">
                    {gate1Config.metadata.description}
                </p>

                <!-- Questionnaire Info -->
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <p class="text-sm font-medium text-blue-900">Estimated Time</p>
                            <p class="text-lg text-blue-700">{gate1Config.metadata.estimatedTime} minutes</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-blue-900">Phases</p>
                            <p class="text-lg text-blue-700">{gate1Config.sections.length}</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-blue-900">Required Roles</p>
                            <p class="text-lg text-blue-700">{gate1Config.metadata.requiredRoles.join(', ')}</p>
                        </div>
                    </div>
                </div>

                <!-- Gate Criteria -->
                <div class="mt-4 bg-white border border-gray-200 rounded-lg p-4">
                    <h3 class="text-sm font-medium text-gray-900 mb-2">Gate Criteria</h3>
                    <ul class="space-y-1">
                        {
                            gate1Config.gateCriteria.map((criterion) => (
                                <li class="flex items-start text-sm text-gray-700">
                                    <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    {criterion}
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Phase Overview -->
                <div class="mt-4 bg-white border border-gray-200 rounded-lg p-4">
                    <h3 class="text-sm font-medium text-gray-900 mb-3">Phase Overview</h3>
                    <div class="space-y-3">
                        {
                            gate1Config.sections.map((section, idx) => (
                                <div class="flex items-start">
                                    <div class="flex-shrink-0 w-8 h-8 bg-blue-100 text-blue-700 rounded-full flex items-center justify-center font-semibold text-sm mr-3">
                                        {idx + 1}
                                    </div>
                                    <div>
                                        <p class="font-medium text-gray-900">{section.title}</p>
                                        <p class="text-sm text-gray-600">{section.description}</p>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>

                <!-- Completion Requirements -->
                <div class="mt-4 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                    <h3 class="text-sm font-medium text-yellow-900 mb-2">Completion Requirements</h3>
                    <div class="flex items-start text-sm text-yellow-800">
                        <svg class="w-4 h-4 text-yellow-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                        <span
                            ><strong>All three phases must pass</strong> for Gate 1 completion. Partner must demonstrate readiness to sell Kuiper services before
                            proceeding to Gate 2.</span
                        >
                    </div>
                </div>
            </div>

            <!-- Questionnaire Component -->
            <Gate1Questionnaire client:load config={gate1Config} existingData={existingSubmission} partnerId={partnerId} mode={mode} />
        </main>

        <!-- Footer -->
        <footer class="bg-white border-t border-gray-200 mt-12">
            <div class="container mx-auto px-4 py-6">
                <p class="text-sm text-gray-600 text-center">© 2025 Kuiper Partner Onboarding Hub. All rights reserved.</p>
            </div>
        </footer>
    </body>
</html>
