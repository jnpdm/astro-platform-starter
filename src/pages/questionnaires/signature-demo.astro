---
import Layout from '../../layouts/Layout.astro';
import { SignatureCapture } from '../../components/questionnaires/SignatureCapture';
---

<Layout title="Signature Capture Demo">
    <div class="max-w-4xl mx-auto p-8">
        <h1 class="text-3xl font-bold mb-2">Signature Capture Component Demo</h1>
        <p class="text-gray-600 mb-8">This demo showcases the SignatureCapture component with both typed and drawn signature modes.</p>

        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-xl font-semibold mb-4">Interactive Demo</h2>
            <p class="text-sm text-gray-600 mb-6">
                Try both signature modes and see how the component captures metadata including timestamp, IP address, and user agent.
            </p>

            <div id="signature-container" class="border-2 border-gray-200 rounded-lg p-6 bg-gray-50">
                <SignatureCapture
                    client:load
                    onSignature={(signature) => {
                        console.log('Signature captured:', signature);

                        // Display success message
                        const container = document.getElementById('result-container');
                        if (container) {
                            container.innerHTML = `
                <div class="bg-green-50 border border-green-200 rounded-md p-4">
                  <h3 class="text-lg font-semibold text-green-900 mb-2">✓ Signature Captured Successfully!</h3>
                  <div class="text-sm text-green-800 space-y-1">
                    <p><strong>Type:</strong> ${signature.type}</p>
                    <p><strong>Name:</strong> ${signature.signerName}</p>
                    <p><strong>Email:</strong> ${signature.signerEmail}</p>
                    <p><strong>Timestamp:</strong> ${new Date(signature.timestamp).toLocaleString()}</p>
                    <p><strong>IP Address:</strong> ${signature.ipAddress}</p>
                    <p><strong>User Agent:</strong> ${signature.userAgent.substring(0, 80)}...</p>
                  </div>
                  ${
                      signature.type === 'drawn'
                          ? `
                    <div class="mt-4">
                      <p class="text-sm font-medium text-green-900 mb-2">Signature Image:</p>
                      <img src="${signature.data}" alt="Signature" class="border border-green-300 bg-white max-w-md" />
                    </div>
                  `
                          : `
                    <div class="mt-4">
                      <p class="text-sm font-medium text-green-900 mb-2">Typed Signature:</p>
                      <p style="font-family: cursive; font-size: 2rem;">${signature.data}</p>
                    </div>
                  `
                  }
                </div>
              `;
                        }
                    }}
                />
            </div>

            <div id="result-container" class="mt-6"></div>
        </div>

        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
            <h2 class="text-xl font-semibold mb-4 text-blue-900">Features</h2>
            <ul class="space-y-2 text-sm text-blue-800">
                <li class="flex items-start">
                    <span class="mr-2">✓</span>
                    <span><strong>Typed Signature Mode:</strong> Users can type their name with a cursive font preview</span>
                </li>
                <li class="flex items-start">
                    <span class="mr-2">✓</span>
                    <span><strong>Drawn Signature Mode:</strong> Users can draw their signature on a canvas with mouse or touch</span>
                </li>
                <li class="flex items-start">
                    <span class="mr-2">✓</span>
                    <span><strong>Metadata Capture:</strong> Automatically captures timestamp, IP address, and user agent</span>
                </li>
                <li class="flex items-start">
                    <span class="mr-2">✓</span>
                    <span><strong>Preview & Confirmation:</strong> Users can preview their signature and metadata before confirming</span>
                </li>
                <li class="flex items-start">
                    <span class="mr-2">✓</span>
                    <span><strong>Terms Acceptance:</strong> Requires explicit consent before submission</span>
                </li>
                <li class="flex items-start">
                    <span class="mr-2">✓</span>
                    <span><strong>Validation:</strong> Ensures all required fields are completed before allowing submission</span>
                </li>
                <li class="flex items-start">
                    <span class="mr-2">✓</span>
                    <span><strong>Clear Function:</strong> Allows users to clear and redraw their signature</span>
                </li>
                <li class="flex items-start">
                    <span class="mr-2">✓</span>
                    <span><strong>Touch Support:</strong> Canvas drawing works with both mouse and touch input</span>
                </li>
            </ul>
        </div>

        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
            <h2 class="text-xl font-semibold mb-4">Usage Example</h2>
            <pre
                class="bg-gray-900 text-gray-100 p-4 rounded-md overflow-x-auto text-sm"><code>{`import { SignatureCapture } from './components/questionnaires/SignatureCapture';
import type { Signature } from './types/signature';

function MyForm() {
  const handleSignature = (signature: Signature) => {
    console.log('Signature captured:', signature);
    // Submit signature with form data
  };

  return (
    <SignatureCapture
      onSignature={handleSignature}
      mode="typed"
      signerEmail="user@example.com"
    />
  );
}`}</code></pre>
        </div>

        <div class="mt-8">
            <a href="/" class="inline-block px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700"> ← Back to Dashboard </a>
        </div>
    </div>
</Layout>

<style>
    pre code {
        font-family: 'Courier New', monospace;
    }
</style>
