---
/**
 * Gate 3: Ready to Deliver Questionnaire Page
 *
 * This page implements the Gate 3: Ready to Deliver questionnaire which validates
 * operational readiness and launch validation.
 *
 * Features:
 * - Two phase sections: Phase 3A (Operational Readiness), Phase 3B (Launch Validation)
 * - Validates gate criteria: beta testing successful, support transition complete, operational metrics validated
 * - Both phases must pass for Gate 3 completion
 * - Section status calculation based on responses
 * - Signature capture before submission
 *
 * Requirements: 6.1, 6.2, 6.3, 6.4, 6.6
 */

export const prerender = false;

import Gate3Questionnaire from '../../components/questionnaires/Gate3Questionnaire';
import type { QuestionnaireConfig } from '../../types/questionnaire';

// Load the Gate 3 questionnaire config
const gate3Config: QuestionnaireConfig = await import('../../config/questionnaires/gate-3-ready-to-deliver.json').then((m) => m.default);

// Get partner ID from URL query params (if editing existing submission)
const url = new URL(Astro.request.url);
const partnerId = url.searchParams.get('partnerId') || 'new';
const submissionId = url.searchParams.get('submissionId');

// Load existing submission if editing
let existingSubmission = null;
if (submissionId) {
    try {
        const response = await fetch(`${url.origin}/api/submission/${submissionId}`);
        if (response.ok) {
            const result = await response.json();
            existingSubmission = result.data;
        }
    } catch (error) {
        console.error('Failed to load existing submission:', error);
    }
}

import HubLayout from '../../layouts/HubLayout.astro';

const pageTitle = existingSubmission ? 'View Gate 3: Ready to Deliver Submission' : 'Gate 3: Ready to Deliver Questionnaire';
const mode = existingSubmission ? 'view' : 'edit';
---

<HubLayout title={pageTitle} description="Gate 3: Ready to Deliver Questionnaire">
    <div class="py-8">
        <!-- Page Header -->
        <div class="mb-6">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <h1 class="text-4xl font-bold mb-2">Gate 3: Ready to Deliver</h1>
                    <p class="text-gray-300">Validate delivery readiness and operational capability</p>
                </div>
                <a href="/" class="px-4 py-2 text-sm font-medium bg-gray-700 hover:bg-gray-600 rounded transition-colors"> ‚Üê Back to Dashboard </a>
            </div>
        </div>
        <!-- Page Header -->
        <div class="mb-8">
            <div class="flex items-center mb-2">
                <svg class="w-8 h-8 text-indigo-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                <h2 class="text-3xl font-bold text-gray-900">{pageTitle}</h2>
            </div>
            <p class="text-gray-600 mb-4">
                {gate3Config.metadata.description}
            </p>

            <!-- Questionnaire Info -->
            <div class="bg-indigo-50 border border-indigo-200 rounded-lg p-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <p class="text-sm font-medium text-indigo-900">Estimated Time</p>
                        <p class="text-lg text-indigo-700">{gate3Config.metadata.estimatedTime} minutes</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-indigo-900">Phases</p>
                        <p class="text-lg text-indigo-700">{gate3Config.sections.length}</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-indigo-900">Required Roles</p>
                        <p class="text-lg text-indigo-700">{gate3Config.metadata.requiredRoles.join(', ')}</p>
                    </div>
                </div>
            </div>

            <!-- Gate Criteria -->
            <div class="mt-4 bg-white border border-gray-200 rounded-lg p-4">
                <h3 class="text-sm font-medium text-gray-900 mb-2">Gate Criteria</h3>
                <ul class="space-y-1">
                    {
                        gate3Config.gateCriteria.map((criterion) => (
                            <li class="flex items-start text-sm text-gray-700">
                                <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                {criterion}
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Phase Overview -->
            <div class="mt-4 bg-white border border-gray-200 rounded-lg p-4">
                <h3 class="text-sm font-medium text-gray-900 mb-3">Phase Overview</h3>
                <div class="space-y-3">
                    {
                        gate3Config.sections.map((section, idx) => (
                            <div class="flex items-start">
                                <div class="flex-shrink-0 w-8 h-8 bg-indigo-100 text-indigo-700 rounded-full flex items-center justify-center font-semibold text-sm mr-3">
                                    {idx + 1}
                                </div>
                                <div>
                                    <p class="font-medium text-gray-900">{section.title}</p>
                                    <p class="text-sm text-gray-600">{section.description}</p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Completion Requirements -->
            <div class="mt-4 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                <h3 class="text-sm font-medium text-yellow-900 mb-2">Completion Requirements</h3>
                <div class="flex items-start text-sm text-yellow-800">
                    <svg class="w-4 h-4 text-yellow-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                    <span
                        ><strong>Both phases must pass</strong> for Gate 3 completion. Partner must be fully ready to deliver Kuiper services to customers before
                        proceeding to launch.</span
                    >
                </div>
            </div>
        </div>

        <!-- Questionnaire Component -->
        <Gate3Questionnaire client:load config={gate3Config} existingData={existingSubmission} partnerId={partnerId} mode={mode} />
    </div>
</HubLayout>
