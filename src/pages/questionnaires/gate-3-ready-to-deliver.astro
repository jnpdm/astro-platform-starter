---
/**
 * Gate 3: Ready to Deliver Questionnaire Page
 */

export const prerender = false;

import Gate3QuestionnaireWithToast from '../../components/questionnaires/Gate3QuestionnaireWithToast';
import HubLayout from '../../layouts/HubLayout.astro';
import gate3Config from '../../config/questionnaires/gate-3-ready-to-deliver.json';

const url = new URL(Astro.request.url);
const partnerId = url.searchParams.get('partnerId') || 'new';
const submissionId = url.searchParams.get('submissionId');
const mode = url.searchParams.get('mode') || 'create';

let existingSubmission = null;

if (submissionId) {
    try {
        const { getSubmission } = await import('../../utils/storage');
        existingSubmission = await getSubmission(submissionId);
        if (!existingSubmission) {
            console.error('Submission not found:', submissionId);
        }
    } catch (error) {
        console.error('Failed to load existing submission:', error);
    }
}

const pageTitle =
    mode === 'edit'
        ? 'Edit Gate 3: Ready to Deliver Questionnaire'
        : existingSubmission
          ? 'View Gate 3: Ready to Deliver Submission'
          : 'Gate 3: Ready to Deliver Questionnaire';
---

<HubLayout title={pageTitle} description="Gate 3: Ready to Deliver Questionnaire">
    <div class="py-8">
        <div class="mb-6">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <h1 class="text-4xl font-bold mb-2">
                        {mode === 'edit' && <span class="text-blue-400">Editing: </span>}Gate 3: Ready to Deliver
                    </h1>
                    <p class="text-gray-300">Validate delivery readiness and operational capability</p>
                    {
                        mode === 'edit' && existingSubmission && (
                            <div class="mt-2 p-3 bg-blue-900/50 border border-blue-500 text-blue-200 text-sm rounded">
                                <strong>✏️ Edit Mode:</strong> You are editing an existing questionnaire submission.
                            </div>
                        )
                    }
                </div>
                <a
                    href={partnerId !== 'new' ? `/partner/${partnerId}` : '/'}
                    class="px-4 py-2 text-sm font-medium bg-gray-700 hover:bg-gray-600 rounded transition-colors"
                >
                    {partnerId !== 'new' ? 'Back to Partner' : 'Back to Dashboard'}
                </a>
            </div>
        </div>

        <div id="questionnaire-container">
            <div id="loading-indicator" class="flex items-center justify-center py-12">
                <div class="text-center">
                    <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mb-4"></div>
                    <p class="text-gray-400">Loading questionnaire...</p>
                </div>
            </div>

            <div id="error-boundary" class="hidden">
                <div class="max-w-2xl mx-auto">
                    <div class="bg-red-50 border border-red-200 rounded-lg p-8">
                        <div class="flex items-start">
                            <svg class="w-6 h-6 text-red-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                            <div class="flex-1">
                                <h3 class="text-lg font-medium text-red-900 mb-2">Failed to Load Questionnaire</h3>
                                <p class="text-sm text-red-700 mb-4">We encountered an error loading the questionnaire.</p>
                                <div class="flex gap-3">
                                    <button onclick="window.location.reload()" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Retry</button>
                                    <a href="/" class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300">Back to Dashboard</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="questionnaire-content" style="display: none;">
                <Gate3QuestionnaireWithToast
                    client:only="react"
                    config={gate3Config}
                    existingData={existingSubmission}
                    partnerId={partnerId}
                    mode={mode === 'edit' || mode === 'view' ? mode : undefined}
                />
            </div>
        </div>

        <script>
            // Hide loading indicator once React component mounts
            function hideLoadingIndicator() {
                const loadingIndicator = document.getElementById('loading-indicator');
                const questionnaireContent = document.getElementById('questionnaire-content');

                if (loadingIndicator) {
                    loadingIndicator.style.display = 'none';
                }
                if (questionnaireContent) {
                    questionnaireContent.style.display = 'block';
                }
            }

            // Check for React component mounting
            function checkForComponent() {
                const container = document.getElementById('questionnaire-content');
                if (container && container.querySelector('form, [role="form"], .questionnaire-form')) {
                    hideLoadingIndicator();
                    return true;
                }
                return false;
            }

            // Try multiple strategies to detect when component is ready
            document.addEventListener('astro:page-load', () => {
                // Strategy 1: Check immediately
                if (checkForComponent()) return;

                // Strategy 2: Use MutationObserver to watch for DOM changes
                const container = document.getElementById('questionnaire-content');
                if (container) {
                    const observer = new MutationObserver(() => {
                        if (checkForComponent()) {
                            observer.disconnect();
                        }
                    });
                    observer.observe(container, { childList: true, subtree: true });

                    // Strategy 3: Fallback timeout after 3 seconds
                    setTimeout(() => {
                        observer.disconnect();
                        hideLoadingIndicator();
                    }, 3000);
                }

                // Error handling
                window.addEventListener('error', () => {
                    const errorBoundary = document.getElementById('error-boundary');
                    const questionnaireContainer = document.getElementById('questionnaire-content');
                    const loadingIndicator = document.getElementById('loading-indicator');

                    if (errorBoundary && questionnaireContainer) {
                        errorBoundary.classList.remove('hidden');
                        questionnaireContainer.style.display = 'none';
                        if (loadingIndicator) {
                            loadingIndicator.style.display = 'none';
                        }
                    }
                });
            });
        </script>
    </div>
</HubLayout>
