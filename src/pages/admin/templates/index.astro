---
export const prerender = false;

import HubLayout from '../../../layouts/HubLayout.astro';
import { getUserSession } from '../../../middleware/auth';
import { listTemplates } from '../../../utils/templateStorage';
import type { QuestionnaireTemplate } from '../../../types/template';

// Get current user from session
const currentUser = getUserSession();

// Restrict access to PDM role only
if (!currentUser || currentUser.role !== 'PDM') {
    return Astro.redirect('/?error=access_denied');
}

// Fetch all templates
let templates: QuestionnaireTemplate[] = [];
let error: string | null = null;

try {
    templates = await listTemplates();
    console.log('[TemplateList] Loaded templates:', templates.length);
} catch (e) {
    console.error('[TemplateList] Failed to load templates:', e);
    error = 'Failed to load templates. Please try again later.';
}

// Define the expected template order and display names
const templateOrder = [
    { id: 'pre-contract', name: 'Pre-Contract: PDM Engagement' },
    { id: 'gate-0', name: 'Gate 0: Onboarding Kickoff' },
    { id: 'gate-1', name: 'Gate 1: Ready to Sell' },
    { id: 'gate-2', name: 'Gate 2: Ready to Order' },
    { id: 'gate-3', name: 'Gate 3: Ready to Deliver' },
    { id: 'post-launch', name: 'Post-Launch' }
];

// Create a map of templates by ID for easy lookup
const templateMap = new Map(templates.map((t) => [t.id, t]));

// Build ordered list with template data or placeholders
const orderedTemplates = templateOrder.map(({ id, name }) => {
    const template = templateMap.get(id);
    return {
        id,
        name,
        exists: !!template,
        version: template?.version || 0,
        fieldCount: template?.fields.length || 0,
        updatedAt: template?.updatedAt,
        updatedBy: template?.updatedBy
    };
});
---

<HubLayout title="Manage Templates">
    <div class="py-8">
        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-4xl font-bold mb-2">Manage Questionnaire Templates</h1>
                <p class="text-gray-300">Edit questionnaire templates for all gate phases</p>
            </div>
            <a href="/" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors text-sm font-medium"> ‚Üê Back to Dashboard </a>
        </div>

        {error && <div class="bg-red-900/50 border border-red-600 text-red-200 px-4 py-3 rounded mb-6">{error}</div>}

        <!-- Templates List -->
        <div class="bg-gray-800/50 border border-gray-700 rounded-lg overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-700 bg-gray-900/50">
                            <th class="text-left py-4 px-6 text-sm font-medium text-gray-400"> Questionnaire Type </th>
                            <th class="text-center py-4 px-6 text-sm font-medium text-gray-400"> Version </th>
                            <th class="text-center py-4 px-6 text-sm font-medium text-gray-400"> Fields </th>
                            <th class="text-left py-4 px-6 text-sm font-medium text-gray-400"> Last Updated </th>
                            <th class="text-left py-4 px-6 text-sm font-medium text-gray-400"> Updated By </th>
                            <th class="text-right py-4 px-6 text-sm font-medium text-gray-400"> Actions </th>
                        </tr>
                    </thead>
                    <tbody>
                        {
                            orderedTemplates.map((template) => (
                                <tr class="border-b border-gray-700/50 hover:bg-gray-700/30 transition-colors">
                                    <td class="py-4 px-6">
                                        <div class="flex items-center gap-3">
                                            <span class="text-2xl">üìã</span>
                                            <div>
                                                <div class="font-medium text-white">{template.name}</div>
                                                <div class="text-xs text-gray-400">{template.id}</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-4 px-6 text-center">
                                        {template.exists ? (
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-900/50 text-blue-300 border border-blue-700">
                                                v{template.version}
                                            </span>
                                        ) : (
                                            <span class="text-gray-500 text-sm">‚Äî</span>
                                        )}
                                    </td>
                                    <td class="py-4 px-6 text-center">
                                        {template.exists ? (
                                            <span class="text-sm text-gray-300">
                                                {template.fieldCount} {template.fieldCount === 1 ? 'field' : 'fields'}
                                            </span>
                                        ) : (
                                            <span class="text-gray-500 text-sm">‚Äî</span>
                                        )}
                                    </td>
                                    <td class="py-4 px-6">
                                        {template.exists && template.updatedAt ? (
                                            <span class="text-sm text-gray-300">
                                                {new Date(template.updatedAt).toLocaleDateString('en-US', {
                                                    year: 'numeric',
                                                    month: 'short',
                                                    day: 'numeric'
                                                })}
                                            </span>
                                        ) : (
                                            <span class="text-gray-500 text-sm">‚Äî</span>
                                        )}
                                    </td>
                                    <td class="py-4 px-6">
                                        {template.exists && template.updatedBy ? (
                                            <span class="text-sm text-gray-300">{template.updatedBy}</span>
                                        ) : (
                                            <span class="text-gray-500 text-sm">‚Äî</span>
                                        )}
                                    </td>
                                    <td class="py-4 px-6 text-right">
                                        <div class="flex items-center justify-end gap-2">
                                            {template.exists ? (
                                                <>
                                                    <a
                                                        href={`/admin/templates/${template.id}/edit`}
                                                        class="px-3 py-1.5 bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors text-sm font-medium"
                                                    >
                                                        ‚úèÔ∏è Edit
                                                    </a>
                                                    <a
                                                        href={`/admin/templates/${template.id}/preview`}
                                                        class="px-3 py-1.5 bg-gray-600 hover:bg-gray-700 rounded-lg transition-colors text-sm font-medium"
                                                    >
                                                        üëÅÔ∏è Preview
                                                    </a>
                                                </>
                                            ) : (
                                                <span class="px-3 py-1.5 bg-gray-700 text-gray-400 rounded-lg text-sm font-medium cursor-not-allowed">
                                                    Not Created
                                                </span>
                                            )}
                                        </div>
                                    </td>
                                </tr>
                            ))
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Info Box -->
        <div class="mt-6 bg-blue-900/20 border border-blue-700/50 rounded-lg p-4">
            <div class="flex items-start gap-3">
                <span class="text-2xl">‚ÑπÔ∏è</span>
                <div class="flex-1">
                    <h3 class="font-semibold text-blue-300 mb-1">About Template Management</h3>
                    <p class="text-sm text-gray-300 mb-2">Templates define the structure and fields for each questionnaire type. When you edit a template:</p>
                    <ul class="text-sm text-gray-300 space-y-1 list-disc list-inside">
                        <li>A new version is created automatically</li>
                        <li>New submissions will use the updated template</li>
                        <li>Existing submissions continue to display with their original template version</li>
                        <li>You can add, remove, reorder, and modify fields</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</HubLayout>
