---
import Logo from '../components/Logo.astro';
---

<header class="header-container">
    <div class="header-top">
        <div class="branding">
            <a href="/" class="logo-link">
                <Logo />
            </a>
            <div class="hub-title">
                <h1 class="title-text">Partner Onboarding Hub</h1>
                <p class="subtitle-text">PDM / Sales Operations</p>
            </div>
        </div>

        <div class="user-info">
            <div id="auth-section" class="auth-section">
                <!-- Login button shown when not authenticated -->
                <button id="login-btn" class="auth-button login-button" style="display: none;"> Sign In </button>

                <!-- User info shown when authenticated -->
                <div id="user-display" class="user-display" style="display: none;">
                    <div class="user-details">
                        <span id="user-name" class="user-name"></span>
                        <span id="user-role" class="user-role"></span>
                    </div>
                    <div id="user-avatar" class="user-avatar"></div>
                    <button id="logout-btn" class="auth-button logout-button"> Sign Out </button>
                </div>
            </div>
        </div>
    </div>
</header>

<script>
    import { getUserSession } from '../middleware/auth';

    // Loading state management
    let isLoading = false;
    let authError: string | null = null;

    function setLoadingState(loading: boolean) {
        isLoading = loading;
        updateAuthUI();
    }

    function setAuthError(error: string | null) {
        authError = error;
        updateAuthUI();
    }

    function updateAuthUI() {
        const loginBtn = document.getElementById('login-btn');
        const userDisplay = document.getElementById('user-display');
        const userName = document.getElementById('user-name');
        const userRole = document.getElementById('user-role');
        const userAvatar = document.getElementById('user-avatar');
        const logoutBtn = document.getElementById('logout-btn');
        const authSection = document.getElementById('auth-section');

        // Get current user from session (Auth0 session is managed by HubLayout)
        const user = getUserSession();

        // Display error message if present
        if (authError && authSection) {
            const existingError = document.getElementById('auth-error-message');
            if (!existingError) {
                const errorDiv = document.createElement('div');
                errorDiv.id = 'auth-error-message';
                errorDiv.className = 'auth-error-message';
                errorDiv.innerHTML = `
                    <span class="error-text">${authError}</span>
                    <button id="retry-auth-btn" class="retry-button">Retry</button>
                    <button id="dismiss-error-btn" class="dismiss-button">Ã—</button>
                `;
                authSection.insertBefore(errorDiv, authSection.firstChild);

                // Add retry button handler
                const retryBtn = document.getElementById('retry-auth-btn');
                if (retryBtn) {
                    retryBtn.addEventListener('click', () => {
                        setAuthError(null);
                        window.kuiperAuth?.login();
                    });
                }

                // Add dismiss button handler
                const dismissBtn = document.getElementById('dismiss-error-btn');
                if (dismissBtn) {
                    dismissBtn.addEventListener('click', () => {
                        setAuthError(null);
                    });
                }
            }
        } else {
            // Remove error message if no error
            const existingError = document.getElementById('auth-error-message');
            if (existingError) {
                existingError.remove();
            }
        }

        if (user && loginBtn && userDisplay && userName && userRole && userAvatar) {
            // User is authenticated
            loginBtn.style.display = 'none';
            userDisplay.style.display = 'flex';

            const displayName = user.name || user.user_metadata?.full_name || user.email || 'User';
            const role = user.role || user.app_metadata?.role || user.app_metadata?.roles?.[0] || 'PAM';

            userName.textContent = displayName;
            userRole.textContent = role;
            userAvatar.textContent = displayName.charAt(0).toUpperCase();

            // Update button state based on loading
            if (logoutBtn && logoutBtn instanceof HTMLButtonElement) {
                logoutBtn.disabled = isLoading;
                logoutBtn.textContent = isLoading ? 'Signing Out...' : 'Sign Out';
            }
        } else if (loginBtn && userDisplay) {
            // User is not authenticated
            loginBtn.style.display = 'block';
            userDisplay.style.display = 'none';

            // Update button state based on loading
            if (loginBtn instanceof HTMLButtonElement) {
                loginBtn.disabled = isLoading;
                loginBtn.textContent = isLoading ? 'Signing In...' : 'Sign In';
            }
        }
    }

    // Attach event listeners
    function attachEventListeners() {
        const loginBtn = document.getElementById('login-btn');
        const logoutBtn = document.getElementById('logout-btn');

        if (loginBtn) {
            loginBtn.addEventListener('click', async () => {
                try {
                    setLoadingState(true);
                    setAuthError(null);
                    await window.kuiperAuth?.login();
                } catch (error) {
                    console.error('Login failed:', error);
                    setLoadingState(false);
                    setAuthError('Login failed. Please try again.');
                }
            });
        }

        if (logoutBtn) {
            logoutBtn.addEventListener('click', async () => {
                try {
                    setLoadingState(true);
                    setAuthError(null);
                    await window.kuiperAuth?.logout();
                } catch (error) {
                    console.error('Logout failed:', error);
                    setLoadingState(false);
                    setAuthError('Logout failed. Please try again.');
                }
            });
        }
    }

    // Update UI on page load
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
            updateAuthUI();
            attachEventListeners();
        });
    } else {
        updateAuthUI();
        attachEventListeners();
    }

    // Listen for custom auth state change events from Auth0
    window.addEventListener('auth-state-changed', () => {
        updateAuthUI();
    });

    // Check for auth errors in URL parameters
    const urlParams = new URLSearchParams(window.location.search);
    const errorParam = urlParams.get('error');
    if (errorParam === 'auth_callback_failed') {
        setAuthError('Authentication failed. Please try signing in again.');
    } else if (errorParam === 'auth_failed') {
        setAuthError('Authentication error. Please sign in to continue.');
    }
</script>

<style>
    .header-container {
        padding-top: 1.5rem;
        padding-bottom: 2rem;
    }

    .header-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .branding {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .logo-link {
        text-decoration: none;
        display: flex;
        align-items: center;
        transition: opacity 0.2s;
    }

    .logo-link:hover {
        opacity: 0.8;
    }

    .hub-title {
        display: flex;
        flex-direction: column;
        gap: 0.125rem;
    }

    .title-text {
        font-size: 1.25rem;
        font-weight: 700;
        color: white;
        margin: 0;
        line-height: 1.2;
    }

    .subtitle-text {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.6);
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .auth-section {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .auth-button {
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        border: none;
        outline: none;
    }

    .login-button {
        background: linear-gradient(135deg, var(--color-primary), var(--color-complementary));
        color: white;
    }

    .login-button:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }

    .logout-button {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .logout-button:hover {
        background-color: rgba(255, 255, 255, 0.15);
    }

    .user-display {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .user-details {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.125rem;
    }

    .user-name {
        font-size: 0.875rem;
        font-weight: 600;
        color: white;
    }

    .user-role {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.6);
        background-color: rgba(255, 255, 255, 0.1);
        padding: 0.125rem 0.5rem;
        border-radius: 0.25rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .user-avatar {
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--color-primary), var(--color-complementary));
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1rem;
        color: white;
    }

    .auth-button:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .auth-error-message {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.75rem;
        background-color: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 0.375rem;
        margin-right: 0.75rem;
    }

    .error-text {
        font-size: 0.875rem;
        color: rgb(252, 165, 165);
        flex: 1;
    }

    .retry-button {
        padding: 0.25rem 0.75rem;
        background-color: rgba(239, 68, 68, 0.2);
        color: rgb(252, 165, 165);
        border: 1px solid rgba(239, 68, 68, 0.4);
        border-radius: 0.25rem;
        font-size: 0.75rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .retry-button:hover {
        background-color: rgba(239, 68, 68, 0.3);
    }

    .dismiss-button {
        padding: 0.125rem 0.5rem;
        background: transparent;
        color: rgb(252, 165, 165);
        border: none;
        font-size: 1.25rem;
        line-height: 1;
        cursor: pointer;
        transition: opacity 0.2s;
    }

    .dismiss-button:hover {
        opacity: 0.7;
    }

    @media (max-width: 640px) {
        .header-container {
            padding-top: 1rem;
            padding-bottom: 1.5rem;
        }

        .branding {
            gap: 1rem;
        }

        .hub-title {
            display: none;
        }

        .title-text {
            font-size: 1rem;
        }

        .user-details {
            display: none;
        }

        .user-avatar {
            width: 2rem;
            height: 2rem;
            font-size: 0.875rem;
        }

        .auth-error-message {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.375rem;
            padding: 0.5rem;
            margin-right: 0.5rem;
        }

        .error-text {
            font-size: 0.75rem;
        }

        .retry-button {
            width: 100%;
            padding: 0.375rem;
        }

        .dismiss-button {
            position: absolute;
            top: 0.25rem;
            right: 0.25rem;
        }
    }
</style>
